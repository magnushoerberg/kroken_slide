%html
  %head
    %title KrÃ¶ken
    %link(rel="stylesheet" href="/css/slide_show.css")
  %body
#slides
  -(@items.length/10.0).ceil.times do
    %span.slide
      -for page_item in @items.shift(10)
        %span.left #{page_item.name.capitalize} 
        %span.right  #{page_item.price}:- 
        %br
%footer
  %script{:type=>'text/javascript',:src=>"https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"}
  %script{:type=>'text/javascript',:src=>"/scripts/jquery.cycle.all.min.js"}
  :javascript
    $(function() {
      var slides = $("#slides");
      slides.children().hide();
      slides.cycle({
        fx: 'scrollLeft',
        speed: 1500,
        timeout: 10000
      })
    });
